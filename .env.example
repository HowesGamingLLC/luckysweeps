# Application
NODE_ENV=production
PING_MESSAGE=pong

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/mcluck_db

# Redis (optional)
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Payment Gateways
STRIPE_API_KEY=sk_live_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# Crypto Payments (optional)
BITCOIN_API_KEY=your_bitcoin_api_key
ETHEREUM_API_KEY=your_ethereum_api_key

# Email Service (SendGrid, AWS SES, etc.)
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=your_sendgrid_key
EMAIL_FROM=noreply@mcluck.com

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Facebook OAuth (optional)
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# Apple OAuth (optional)
APPLE_TEAM_ID=your_apple_team_id
APPLE_KEY_ID=your_apple_key_id
APPLE_PRIVATE_KEY=your_apple_private_key

# Server
PORT=3000
HOST=0.0.0.0

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:5173,https://mcluck.com

# Security
SESSION_SECRET=your-session-secret-key
ENCRYPTION_KEY=your-encryption-key

# Feature Flags
ENABLE_MAINTENANCE_MODE=false
ENABLE_CRYPTO_PAYMENTS=true
ENABLE_REFERRAL_PROGRAM=true
